@model MVCalendar.Models.FamilyViewModel

@{
    ViewData["Title"] = "Create";
}

@if (ViewBag.WarningMessage != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.WarningMessage
    </div>

}

<div class="row">
    <div class="col-md-4 mx-auto">
        <h4 class="display-4">Create new family group</h4>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Family.Name" class="control-label"></label>
                <input asp-for="@Model.Family.Name" class="form-control" />
                <span asp-validation-for="@Model.Family.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
